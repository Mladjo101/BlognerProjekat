@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentMaker.Models.ApplicationUser> signInManager
@if(signInManager.IsSignedIn(User)){
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Dobrodošli, @User.Identity.Name </li>
            @if (User.IsInRole("Admin"))
            {
                <li><a class="text-white nav-link" asp-controller="UserManagment" asp-action="Index">Upravljanje Korisnicima</a></li>
            }
            <li><a class="text-danger nav-link"href="javascript:document.getElementById('logoutForm').submit()">Odjava</a></li>
        </ul>
    </form>
}else{
    <ul class="nav navbar-nav">
        <li class="nav-item"><a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Registruj se</a></li>
        <li class="nav-item"><a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">Prijava</a></li>
    </ul>
}