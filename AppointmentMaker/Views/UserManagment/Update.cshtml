@model AppointmentMaker.Models.ApplicationUser
@{
    ViewData["Title"] = "Uredi";
}

<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <input asp-for="ConcurrencyStamp" hidden />
    <input asp-for="NormalizedUserName" hidden />
    <input asp-for="NormalizedEmail" hidden />
    <input asp-for="PasswordHash" hidden />
    <input asp-for="SecurityStamp" hidden />
    <input asp-for="LockoutEnabled" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Uredi informacije o korisniku</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6"><label asp-for="Name"></label></div>
                    <div class="col-6"><label asp-for="Email"></label></div>

                    
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
            <div class="col-12">
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Uredi" />

                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Povratak</a>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }


